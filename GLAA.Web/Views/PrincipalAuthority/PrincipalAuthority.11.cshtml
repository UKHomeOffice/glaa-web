@{
    ViewBag.Title = "Principal Authority - Part 10";
}

@model GLAA.ViewModels.LicenceApplication.BusinessExtensionViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "PrincipalAuthority" }, { "submittedPageId", "11" } })

@using (Html.BeginForm("SaveBusinessExtension", "PrincipalAuthority"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What is your extension number?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.TextFormGroupFor(x => x.BusinessExtension)
        </div>
    </div>

    <button type="submit" class="button">Save and continue</button>
}


