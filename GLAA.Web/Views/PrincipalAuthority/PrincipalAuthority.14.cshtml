@{
    ViewBag.Title = "Principal Authority - Part 12";
}

@model GLAA.ViewModels.LicenceApplication.EmailAddressViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "PrincipalAuthority" }, { "submittedPageId", "14" } })

@using (Html.BeginForm("SavePersonalEmailAddress", "PrincipalAuthority"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What is your personal email address?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.TextFormGroupFor(x => x.EmailAddress)
        </div>
    </div>

    <button type="submit" class="button">Save and continue</button>
}


