@{
    ViewBag.Title = "Where were you born?";
}

@model GLAA.ViewModels.LicenceApplication.BirthDetailsViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "PrincipalAuthority" }, { "submittedPageId", "7" } })

@using (Html.BeginForm("SaveBirthDetails", "PrincipalAuthority"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                @ViewBag.Title
            </h1>
        </div>
        <fieldset>
            <div class="column-two-thirds">
                @Html.TextFormGroupFor(x => x.TownOfBirthViewModel.TownOfBirth)
            </div>
            <div class="column-full">
                @Html.DropDownFormGroupFor(x => x.CountryOfBirthViewModel.CountryOfBirthId, Model.CountryOfBirthViewModel.Countries)
            </div>
            <div class="column-full">
                @Html.TextFormGroupFor(x => x.NationalInsuranceNumberViewModel.NationalInsuranceNumber, Model.NationalInsuranceNumberViewModel)
            </div>
            <div class="column-full">
                @Html.TextFormGroupFor(x => x.SocialSecurityNumberViewModel.SocialSecurityNumber)
            </div>
        </fieldset>
    </div>

    <button type="submit" class="button">Save and continue</button>
}


