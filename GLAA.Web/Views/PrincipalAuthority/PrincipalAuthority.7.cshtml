@{
    ViewBag.Title = "Principal Authority - Part 5";
}

@model GLAA.ViewModels.LicenceApplication.TownOfBirthViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "PrincipalAuthority" }, { "submittedPageId", "7" } })

@using (Html.BeginForm("SaveTownOfBirth", "PrincipalAuthority"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What town were you born in?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.TextFormGroupFor(x => x.TownOfBirth)
        </div>
    </div>

    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What country were you born in?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.TextFormGroupFor(x => x.CountryOfBirth)
        </div>
    </div>

    @Html.HiddenFor(x => x.IsUk)
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What is your national insurance number?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.TextFormGroupFor(x => x.NationalInsuranceNumber)
        </div>
    </div>

    <button type="submit" class="button">Save and continue</button>
}


