@{
    ViewBag.Title = "How would you like to be contacted by the GLAA?";
}

@model GLAA.ViewModels.LicenceApplication.CommunicationPreferenceViewModel

@using (Html.BeginForm("SaveCommunicationPreference", "Eligibility"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                @ViewBag.Title
            </h1>
        </div>

        <div class="column-two-thirds">
            @Html.RadioButtonFormGroupForEnum(x => x.CommunicationPreference)
            <button type="submit" class="button">Continue</button>
        </div>
    </div>
}