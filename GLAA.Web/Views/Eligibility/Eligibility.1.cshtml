@{
    ViewBag.Title = "Principal Authority's email address";
}

@model GLAA.ViewModels.LicenceApplication.PrincipalAuthorityEmailAddressViewModel

@using (Html.BeginForm("SaveEmailAddress", "Eligibility"))
{
    <div class="column-two-thirds">
        @Html.Partial("_GdsValidationSummary")
    </div>
    <div class="column-full">
        <h1 class="heading-xlarge">@ViewBag.Title</h1>
    </div>

    <div class="column-two-thirds">
        @Html.TextFormGroupFor(m => m.EmailAddress)
        <button type="submit" class="button">Continue</button>
    </div>

}
