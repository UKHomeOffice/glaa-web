@{
    ViewBag.Title = "Director or Partner - Part 1";
}

@model GLAA.ViewModels.LicenceApplication.IsPreviousPrincipalAuthorityViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "DirectorOrPartner" }, { "submittedPageId", "1" } })

@using (Html.BeginForm("SaveIsPreviousPrincipalAuthority", "DirectorOrPartner"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                Is the person previously named as the principal authority?
            </h1>
        </div>
        <div class="column-two-thirds">
            <div class="form-group">
                @foreach (var option in Model.YesNo)
                {
                    <div class="multiple-choice">
                        @Html.RadioButtonFor(x => x.IsPreviousPrincipalAuthority, option.Value)
                        @Html.Label(option.Text)
                    </div>
                }
            </div>
        </div>
    </div>

    <button type="submit" class="button">Save and continue</button>
}