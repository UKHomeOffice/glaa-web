@{
    ViewBag.Title = "Organisation Summary";
}

@using GLAA.Web.Helpers
@model GLAA.ViewModels.LicenceApplication.OrganisationViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "Organisation" }, { "submittedPageId", "16" } })

<main id="content" role="main">
    <div class="grid-row">
        <div class="column-full">
            <br />
            @if (!SessionHelper.GetCurrentUserIsAdmin(Context.Session))
            {
                <p>
                    @Html.ActionLink("Return to Task List", "TaskList", "Licence")
                </p>
            }
            else
            {
                <p>
                    @Html.ActionLink("Return to overview", "Licence", "Admin", new { id = SessionHelper.GetCurrentLicenceId(Context.Session) }, new { })
                </p>
            }
            <h1 class="heading-large">
                Check your answers for this section
            </h1>
            @Html.DisplayFor(m => m)
            @if (!SessionHelper.GetCurrentUserIsAdmin(Context.Session))
            {
                <p>
                    @Html.ActionLink("Go to next section", "SubmitApplication", "Licence", null, new { @class = "button" })
                </p>
            }
        </div>
    </div>
</main>