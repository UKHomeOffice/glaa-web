@{
    ViewBag.Title = "Organisation - Part 8";
    var switchValue = "5";
}

@model GLAA.ViewModels.LicenceApplication.WorkerEmploymentStatusViewModel

@using (Html.BeginForm("SaveWorkerSupplyMethod", "Organisation"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What is the employment status of the workers that you intend to supply?
            </h1>
        </div>
        <div class="column-two-thirds">
            <div class="form-group">
                <fieldset>
                    <legend>
                        <span class="body-text"></span>
                    </legend>
                    @Html.CheckboxListFor(x => x.SelectedStatuses, Model.AvailableStatuses)
                    <div class="panel panel-border-narrow js-hidden" id="AccommodatesWorkers">
                        @Html.TextFormGroupFor(x => x.OtherEmploymentStatus)
                    </div>
                </fieldset>
            </div>
        </div>
    </div>    
    <button type="submit" class="button">Save and continue</button>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            hiddenContent.hideContent();
            branchedQuestion.toggleBranch('.multiple-choice > input[type="checkbox"]', '#AccommodatesWorkers', @switchValue);
        });
    </script>
}