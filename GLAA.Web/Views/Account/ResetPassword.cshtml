@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset your password";
}

<div class="grid-row">

    <div class="column-two-thirds">

        @Html.Partial("_GdsValidationSummary")

        <h2 class="heading-large">Reset your password</h2>

        <form method="post">

            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="Code" type="hidden" />

            @Html.TextFormGroupFor(m => m.Email)

            <div class="form-group">
                <fieldset>
                    @Html.LabelFor(x => x.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </fieldset>
            </div>

            <div class="form-group">
                <fieldset>
                    @Html.LabelFor(x => x.ConfirmPassword, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </fieldset>
            </div>

            <div class="form-group">
                <div>
                    <button type="submit" value="Log in" class="button button-start">Reset password</button>
                </div>
            </div>
        </form>
    </div>
</div>
