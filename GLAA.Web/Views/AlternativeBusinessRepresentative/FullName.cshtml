@using GLAA.Web.Helpers
@model GLAA.ViewModels.LicenceApplication.FullNameViewModel

@inject ISessionHelper SessionHelper

@{
    ViewBag.Title = "Alternative Business Representative - Part 1";
}

@*TODO - bit of hack to go back*@
@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "AlternativeBusinessRepresentatives" }, { "submittedPageId", "4" } })

@using (Html.BeginForm("FullName", "AlternativeBusinessRepresentative"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What is your full name?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.TextFormGroupFor(x => x.FullName)
        </div>
    </div>

    <button type="submit" class="button">Save and continue</button>
}