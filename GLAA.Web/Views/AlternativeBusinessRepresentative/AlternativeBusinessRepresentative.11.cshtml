@{
    ViewBag.Title = "Alternative Business Representative - Part 11";
}

@model GLAA.ViewModels.LicenceApplication.EmailAddressViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "AlternativeBusinessRepresentative" }, { "submittedPageId", "11" } })

@using (Html.BeginForm("SavePersonalEmailAddress", "AlternativeBusinessRepresentative"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What is their business e-mail address?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.TextFormGroupFor(x => x.EmailAddress)
        </div>
    </div>

    <button type="submit" class="button">Save and continue</button>
}