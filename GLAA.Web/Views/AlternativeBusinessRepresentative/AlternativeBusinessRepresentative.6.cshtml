@{
    ViewBag.Title = "Alternative Business Representative - Part 6";
}

@model GLAA.ViewModels.LicenceApplication.JobTitleViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "AlternativeBusinessRepresentative" }, { "submittedPageId", "6" } })

@using (Html.BeginForm("SaveJobTitle", "AlternativeBusinessRepresentative"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What is their job title?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.TextFormGroupFor(x => x.JobTitle)
        </div>
    </div>

    <button type="submit" class="button">Save and continue</button>
}