@using GLAA.Web.Helpers
@model GLAA.ViewModels.LicenceApplication.DirectorOrPartnerCollectionViewModel

@{
    ViewBag.Title = "Directors Or Partners";
    var isSubmitted = ViewData["IsSubmitted"];
}

<main id="content" role="main">
    <div class="grid-row">
        <div class="column-full">
            <br />
            @if (!SessionHelper.GetCurrentUserIsAdmin(Context.Session))
            {
                <p>
                    @Html.ActionLink("Return to Task List", "TaskList", "Licence")
                </p>
            }
            else
            {
                <p>
                    @Html.ActionLink("Return to overview", "Licence", "Admin", new { id = SessionHelper.GetCurrentLicenceId(Context.Session) }, new { })
                </p>
            }
            <h1 class="heading-large">
                Directors Or Partners
            </h1>
        </div>
    </div>
    @Html.DisplayFor(m => m, new { IsSubmitted = isSubmitted })
    @if (!SessionHelper.GetCurrentUserIsAdmin(Context.Session))
    {
        <div class="grid-row">
            <div class="column-full">
                <p>
                    @Html.ActionLink("Go to next section", "Part", "NamedIndividuals", 1, new { @class = "button" })
                </p>
            </div>
        </div>
    }
</main>

