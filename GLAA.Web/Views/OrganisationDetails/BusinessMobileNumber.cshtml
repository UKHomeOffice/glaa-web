@{
    ViewBag.Title = "What is your business mobile number?";
}

@model GLAA.ViewModels.LicenceApplication.BusinessMobileNumberViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "OrganisationDetails" }, { "submittedPageId", "5" } })

@using (Html.BeginForm("BusinessMobileNumber", "OrganisationDetails"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                @ViewBag.Title
            </h1>
        </div>
        <div class="column-two-thirds">
            <div class="form-group">
                @Html.LabelWithHintFor(x => x.BusinessMobileNumber)
                @Html.TextBoxFor(x => x.BusinessMobileNumber, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <button type="submit" class="button">Save and continue</button>
}

@section Scripts {
}