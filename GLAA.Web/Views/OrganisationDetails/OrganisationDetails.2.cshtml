
@{
    ViewBag.Title = "Organisation Details - Part 1";
}

@model GLAA.ViewModels.LicenceApplication.OrganisationNameViewModel

@*new { section = "OrganisationDetails", submittedPageId = 2 }*@

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData){{"section", "OrganisationDetails"}, {"submittedPageId", "2"}})

@using (Html.BeginForm("SaveOrganisationName", "OrganisationDetails"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What is your organisation's name?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.TextFormGroupFor(x => x.OrganisationName)
        </div>
    </div>

    <button type="submit" class="button">Save and continue</button>
}

@section Scripts {
}