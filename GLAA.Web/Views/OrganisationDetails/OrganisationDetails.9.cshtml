@{
    ViewBag.Title = "Organisation Details - Part 6";
}

@model GLAA.ViewModels.LicenceApplication.CommunicationPreferenceViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "OrganisationDetails" }, { "submittedPageId", "9" } })

@using (Html.BeginForm("SaveCommunicationPreference", "OrganisationDetails"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What is your preferred channel of communication?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.RadioButtonFormGroupFor(x => x.CommunicationPreference, Model.AvailableCommunicationPreferences)
        </div>
    </div>

    <button type="submit" class="button">Save and continue</button>
}

@section Scripts {
}