@{

    ViewBag.Title = "Please indicate which of these countries your workers will be working in?";
}

@model GLAA.ViewModels.LicenceApplication.OperatingCountriesViewModel

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "OrganisationDetails" }, { "actionName", "OperatingCountries" } })

@using (Html.BeginForm("OperatingCountries", "OrganisationDetails"))
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                @ViewBag.Title
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.CheckBoxFormGroupFor(x => x.OperatingCountries, Model.OperatingCountries)
        </div>
    </div>
    <button type="submit" class="button">Save and continue</button>
}
