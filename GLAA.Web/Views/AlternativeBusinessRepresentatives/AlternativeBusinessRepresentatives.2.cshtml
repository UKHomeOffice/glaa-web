@model GLAA.ViewModels.LicenceApplication.AlternativeBusinessRepresentativeCollectionViewModel

@{
    ViewBag.Title = "Alternative Business Representatives";
}

@Html.Partial("_BackButton", new ViewDataDictionary(ViewData) { { "section", "AlternativeBusinessRepresentatives" }, { "submittedPageId", "2" } })

@using (Html.BeginForm("SaveAlternativeBusinessRepresentatives", "AlternativeBusinessRepresentatives"))
{
    <main id="content" role="main">
        <div class="grid-row">
            <div class="column-two-thirds">
                @Html.Partial("_GdsValidationSummary")
            </div>
            <div class="column-full">
                <h1 class="heading-large">
                    Would you like to add an Alternative Business Representative?
                </h1>
                <p class="lede">You can nominate two people as Alternative Business Representatives. Some information about what constitutes an Alternative Business Representative.</p>
            </div>
            <div class="column-two-thirds">
                <div class="form-group">
                    <fieldset>
                        <legend>
                            <span class="body-text"></span>
                        </legend>

                        @foreach (var option in Model.YesNo)
                        {
                            <div class="multiple-choice">
                                @Html.RadioButtonFor(x => x.HasAlternativeBusinessRepresentatives, option.Value, new { id = $"HasAlternativeBusinessRepresentatives_{option.Text}" })
                                @Html.LabelFor(x => x.HasAlternativeBusinessRepresentatives, option.Text, new { @for = $"HasAlternativeBusinessRepresentatives_{option.Text}" })
                            </div>
                        }
                    </fieldset>
                </div>
            </div>
        </div>
        <button type="submit" class="button">Save and continue</button>
    </main>
}
